<h1>id:<%= @task.id %> 詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to '一覧へ戻る', tasks_path, class: 'btn btn-light' %>

<%= link_to '編集ページへ', edit_task_path(@task), class: 'btn btn-light' %>

<%= link_to '削除する', @task, method: :delete, data:{ confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger' %>